{
  "manifest_version": 2,

  "name": "TabScheduler",
  "description": "This extension opens websites at specified time every day",
  "version": "1.0",

  "options_page": "/html/options.html",

  "browser_action": {
    "default_icon": "/images/icon.png",
    "default_popup": "/html/popup.html"
  },

  "background": {
    "scripts": ["/js/eventPage.js"],
    "persistent": false
  },

  "permissions": [ "tabs", "alarms", "storage" ]
}
